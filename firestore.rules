rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write only their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Publicly readable jobs collection; only authenticated users can create jobs.
    match /jobs/{jobId} {
      // Anyone (including unauthenticated clients) can read job listings.
      allow read: if true;

      // Only authenticated users may create jobs.
      allow create: if request.auth != null;

      // Prevent updates/deletes via client for now (server-side or cloud functions preferred).
      allow update, delete: if false;
    }

    // Add other collection rules here as needed.
  }
}
